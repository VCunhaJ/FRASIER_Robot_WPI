cmake_minimum_required(VERSION 2.8.3)
project(frasier_teleop)

## Find catkin macros and libraries
## if COMPONENTS list like find_package(catkin REQUIRED COMPONENTS xyz)
## is used, also find other catkin packages
find_package(catkin REQUIRED COMPONENTS
  joy
  roboteq_mc_nxtgen_driver
  roscpp
  frasier_ui
)

## System dependencies are found with CMake's conventions
# find_package(Boost REQUIRED COMPONENTS system)


###################################
## catkin specific configuration ##
###################################

catkin_package(
  INCLUDE_DIRS include
  LIBRARIES UI_Command_Handler
 CATKIN_DEPENDS joy roboteq_mc_nxtgen_driver roscpp
#  DEPENDS system_lib
)

###########
## Build ##
###########

include_directories(
    include
  ${catkin_INCLUDE_DIRS}
)



## Declare a cpp executable
 add_executable(frasier_teleop_node src/frasier_teleop.cpp)

## Specify libraries to link a library or executable target against
 target_link_libraries(frasier_teleop_node ${catkin_LIBRARIES} UI_Command_Handler)
  
 




## Copy header files
 install(DIRECTORY include/${PROJECT_NAME}/ 
DESTINATION ${CATKIN_PACKAGE_INCLUDE_DESTINATION} 
FILES_MATCHING PATTERN "*.hpp" PATTERN "*.h" 
)
